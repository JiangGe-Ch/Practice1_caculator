<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/expressionTemp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="bottom|right"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_oper_ac"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                android:text="AC"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_oper_backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:text="⇐"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_oper_percent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:backgroundTint="#CDDC39"
                android:text="%"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_oper_divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:backgroundTint="#CDDC39"
                android:text="/"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_num_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_num_eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_num_nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:lineSpacingExtra="24sp"
                android:text="9"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_oper_multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:backgroundTint="#CDDC39"
                android:text="X"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_num_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_num_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_num_six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_oper_sub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:backgroundTint="#CDDC39"
                android:text="_"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_num_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_num_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_num_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_oper_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:backgroundTint="#CDDC39"
                android:text="+"
                android:textSize="34sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_num_zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_oper_dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_oper_square"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#CDDC39"
                android:text="√"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_oper_equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:text="="
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>